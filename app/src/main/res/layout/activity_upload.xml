<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">


    <ImageView
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:id="@+id/imgPicture"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.23" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <Button
            android:layout_width="wrap_content"
            android:text="Adjuntar imagen"
            android:layout_height="wrap_content"
            android:id="@+id/btnImageGallery"
            android:layout_weight="1"
            android:onClick="onImageGalleryClicked"
            android:nestedScrollingEnabled="true" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:inputType="textPersonName"
        android:text="Descripción"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_weight="0.3" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:entries="@array/lugares"
        android:prompt="@string/seleccionar"

        android:layout_weight="0.1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Hora aproximada"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_weight="0.07" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">

        <RadioButton
            android:id="@+id/radioAnon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anónimo"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioNoAnon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usar mi nombre" />

    </RadioGroup>


</LinearLayout>